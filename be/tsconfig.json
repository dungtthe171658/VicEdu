{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "sourceMap": true,
    "outDir": "build",
    "strict": true,
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": [
    "build",
    "node_modules"
  ],
  "scripts": {
    "serve:dev": "cross-env NODE_ENV=development node build/src/main.js",
    "serve:prod": "cross-env NODE_ENV=production node build/src/main.js"
  }
}